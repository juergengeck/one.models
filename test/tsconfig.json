{
    "compilerOptions": {
        "allowJs": false,
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "checkJs": false,
        "composite": true,
        "incremental": true,
        "declaration": true,
        "declarationDir": "./",
        "declarationMap": true,
        "downlevelIteration": false,
        "emitDeclarationOnly": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": false,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "lib": ["esnext", "dom"],
        "module": "ESNext",
        "moduleResolution": "NodeNext",
        "newLine": "LF",
        "noEmit": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "outDir": ".",
        "removeComments": true,
        "sourceMap": true,
        "stripInternal": true,
        "strict": true,
        "target": "ESNext",
        "tsBuildInfoFile": "../tsconfig.test.tsbuildinfo",
        "useUnknownInCatchVariables": false
    },
    "exclude": [
        "../src/*",
        "../src/**/*",
        "../src/**/**/*"
    ],
    "include": [
        "./*.ts",
        "./**/*.ts",
        "../lib/*.ts",
        "../lib/**/*.ts",
        "../lib/**/**/*.ts"
    ]
}
